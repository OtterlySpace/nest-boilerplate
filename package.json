{
  "name": "nest-boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "docker:up": "docker-compose up -d --build --remove-orphans",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:nest:migration:up": "npm run docker:up && npm run docker:nest:migration:run",
    "docker:nest:migration:show": "docker-compose run --rm nest npx typeorm migration:show",
    "docker:nest:migration:run": "docker-compose run --rm nest npx typeorm migration:run",
    "docker:nest:migration:down": "npm run docker:up && npm run docker:nest:migration:revert",
    "docker:nest:migration:revert": "docker-compose run --rm nest npx typeorm migration:revert",
    "docker:nest:migration:generate": "npm run docker:up && docker-compose run --rm nest npx typeorm migration:generate -n",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@apollo/gateway": "^0.42.0",
    "@nestjs/common": "^8.0.8",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.8",
    "@nestjs/graphql": "^9.0.5",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^8.0.8",
    "@nestjs/typeorm": "^8.0.2",
    "apollo-server-express": "^3.3.0",
    "argon2": "^0.28.2",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "connect-redis": "^6.0.0",
    "express-rate-limit": "^5.3.0",
    "express-session": "^1.17.2",
    "graphql": "^15.6.0",
    "graphql-tools": "^8.2.0",
    "helmet": "^4.6.0",
    "nestjs-redis": "^1.3.3",
    "passport": "^0.5.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.6.1",
    "pg": "^8.7.1",
    "rate-limit-redis": "^2.1.0",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "ts-morph": "^12.0.0",
    "typeorm": "^0.2.37"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.2",
    "@nestjs/schematics": "^8.0.3",
    "@nestjs/testing": "^8.0.8",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "27.0.2",
    "@types/node": "^16.10.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "4.32.0",
    "@typescript-eslint/parser": "4.32.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "jest": "27.2.3",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "27.0.5",
    "ts-loader": "^9.2.6",
    "ts-node": "10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
